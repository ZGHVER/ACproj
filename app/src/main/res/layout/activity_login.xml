<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="#cec29f"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/userLog"
            android:layout_alignParentTop="true"
            android:layout_marginTop="134dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userLog"
            android:id="@+id/login"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="用户名:"
                    android:textSize="20sp"
                    android:background="#fff"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userIDV"
                    android:padding="5dp"
                    android:background="#Fff"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:ems="10"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="  密码:   "
                    android:layout_marginEnd="5dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:background="#Fff"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:id="@+id/userPassWordV"
                    android:layout_weight="1"/>
        </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:text=""
                android:layout_width="12dp"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"/>
        <TextView
                android:text=""
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/warnV"
                android:textColor="#ff0000"
                android:textSize="11sp"
                android:layout_weight="1"/>
    </LinearLayout>
    </LinearLayout>
    <Button
            android:text="登               录"
            android:background="#11000000"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_width="329dp"
            android:layout_alignStart="@id/login"
            android:layout_alignEnd="@id/login"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:id="@+id/button4"
            android:onClick="logIn"
            android:layout_marginBottom="6dp"
            android:theme="@android:style/Theme.Translucent"
            android:layout_centerHorizontal="true"
    />
    <Button
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:onClick="register"
            android:textColor="#127bb4"
            android:background="#00000000"
            android:id="@+id/register"
            android:layout_alignEnd="@+id/login"
            android:layout_below="@+id/button4"/>
    <Button
            android:text="忘记密码？"
            android:onClick="findPassWord"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:background="#00000000"
            android:textColor="#127bb4"
            android:layout_alignStart="@+id/login"
            android:id="@+id/findUserV"
            android:layout_below="@+id/button4"
            android:layout_marginTop="-6dp"/>

</RelativeLayout>